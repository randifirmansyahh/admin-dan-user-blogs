@model ApaYah.Models.Blogs

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DarkLayout.cshtml";
}

<div align="left">
    &nbsp;&nbsp;
    <a href="@Url.Action("Index", "Home")" class="fas fa-home fa-2x" title="Back Home"></a>
</div>
<h1>Buat Sebuah Blog</h1>

<hr />
<div class="">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <br />
                <label asp-for="Title" class="control-label">Judul</label>
                <br />
                <input asp-for="Title" class="form-control" name="Title" style="font-family: 'Comic Sans MS'; border-radius: 8px; text-align: center; color: black; width: 600px; height: 30px;" />
                <span asp-validation-for="Title" class="text-danger"></span>
                <br /><br />
            </div>
            <div class="form-group"><br />
                <label asp-for="Author" class="control-label">Pembuat</label>
                <br />
                <input asp-for="Author" class="form-control" name="Author" style="font-family: 'Comic Sans MS';border-radius: 8px; text-align: center; color: black; width: 600px; height: 30px;" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <label asp-for="Content" class="control-label">Content Blog</label><br /><br />
                <textarea asp-for="Content" class="form-group" style="width:100%;height:150px;border-radius:8px;font-family:'Comic Sans MS'" name="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <button type="submit" class="btn btn-primary btn-lg"
                        style="
                                cursor:pointer;
                                background-color: lime;
                                font-size:16px ;
                                padding: 7px 18px;
                                border-radius: 8px;
                                transition-duration: 0.4s;
                        ">
                    Simpan & Preview
                </button>
            </div>
        </form>
    </div>
</div>